pipeline {
    agent none
    stages {
        stage('Build') {
            agent { label 'docker' }
            steps {
                git branch: 'dev', url: 'https://github.com/ProvedCode/devops.git'
                sh '''
                    docker build --no-cache -t team-olya ./frontend/
                    docker create --name team-olya team-olya-builder
                '''
            }
        }
        stage('Deploy') {
            agent { label 'docker' }
            steps {
                sh '''
                    docker cp team-olya-builder:/build/frontend/team-olya /usr/share/nginx/
                    docker rm -f team-olya-builder
                '''
            }
        }
    }
}