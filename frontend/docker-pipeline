pipeline {
    agent none
    stages {
        stage('Build Docker image') {
            agent { label 'docker' }
            steps {
                git branch: 'dev', url: 'https://github.com/ProvedCode/devops.git'
                sh 'docker build --no-cache -t team-olya ./frontend/'
            }
        }
        stage('Build and deploy frontend') {
            agent { label 'docker' }
            steps {
                sh '''
                    docker run --name team-olya-builder -v /usr/share/nginx/team-olya:/frontend/build team-olya
                    docker rm -f team-olya-builder
                '''
            }
        }
    }
}