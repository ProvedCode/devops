pipeline {
    agent none
    stages {
        stage('Build') {
            agent { label 'java && jdk' }
            steps {
                git branch: 'main', url: 'https://github.com/AButrym/jwt-security-config'
                sh '''
                    chmod 744 ./mvnw
                    ./mvnw clean package
                    mv ./target/demo3*.jar ./demo3.jar
                '''
                stash name: 'jar', includes: '*.jar'
            }
        }
        stage('Deploy') {
            agent { label 'java && target' }
            steps {
                unstash 'jar'
                sh '''
                    sudo systemctl stop demo3 || true
                    cp -f ./demo3.jar ~/demo3.jar
                    chmod 744 ./backend/install-systemd-service.sh
                    ./backend/install-systemd-service.sh
                    sudo systemctl start demo3
                '''
            }
        }
    }
}
