pipeline {
    agent none
    environment {
        SERVER_CREDENTIALS = 'creds'
        WEBHOOK_URL = credentials('')
        BUCKET = 'artifacts-s3'
        REGION = 'eu-central-1'
    }
    stages {
        stage('Build') {
            agent { label 'java && jdk' }
            steps {
                git branch: 'main', url: 'https://github.com/AButrym/jwt-security-config'
                sh '''
                    chmod 744 ./mvnw
                    ./mvnw clean package
                    mv ./target/demo3*.jar ./demo3.jar
                '''
                withAWS(credentials: '${SERVER_CREDENTIALS}', region: '${REGION}') {
                    s3Upload(file: './demo3.jar', bucket: '${BUCKET}')
                }
            }
        }
        stage('Deploy') {
            agent { label 'java && target' }
            steps {
                sh '''
                    chmod 755 ./demo3.jar
                    java -jar ./demo3.jar &
                '''
            }
        }
    }
}
