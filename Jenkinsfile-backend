pipeline {
    stages {
        agent { label 'java' && 'jdk' }
        stage('Build') {
            steps {
                git branch: 'main', url: 'https://github.com/AButrym/jwt-security-config'
                sh '''
                    chmod 744 ./mvnw
                    ./mvnw clean package
                '''
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }
        agent { label 'java' && 'target' }
        stage('Deploy') {
            steps {
                echo 'Reached deploy stage'
            }
        }
    }
}
